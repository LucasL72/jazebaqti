# Base MySQL connection string (dedicated least-privilege account recommended)
DATABASE_URL="mysql://app_user:app_password@db-host:3306/jaze"
# Enforce TLS to MySQL (set to "false" only for local dev with non-TLS instances)
DATABASE_TLS_REQUIRED=true
# Optional client certificate paths for mutual TLS
DATABASE_SSL_CA="/path/to/ca.pem"
DATABASE_SSL_CERT="/path/to/client-cert.pem"
DATABASE_SSL_KEY="/path/to/client-key.pem"

# Administrative authentication
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="ChangeMe!Complex123"
ADMIN_TOTP_SECRET="0123456789abcdef0123456789abcdef"
MEDIA_SIGNING_SECRET="replace-with-strong-random-secret-key"
ADMIN_SESSION_MAX_AGE_SECONDS=1800
ADMIN_PASSWORD_MAX_AGE_DAYS=90

# Alerting and audit notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
AUDIT_ALERT_EMAILS="security-team@example.com"
AUDIT_EMAIL_WEBHOOK_URL="https://email-gateway.example.com/webhook"
